---
layout: null
permalink: /lc_workshops.json
---
{% assign first = true %}
{
  "type": "FeatureCollection",
  "features": [
  {% for workshop in site.data.LC_upcoming_workshops_plain %}
    {% unless workshop.longitude == NULL or workshop.latitude == NULL %}
      {% if first == true %}
        {% assign first = false %}
      {% else %},{% endif %}
      {
        "type": "Feature",
        "geometry": {
          "type": "Point",
          "coordinates":[{{workshop.longitude}},{{workshop.latitude}}]
        },
        "properties": {
          "marker-color": "#2b3990",
          "details": [
            "<a href='{{workshop.url}}'>{{workshop.venue}}: {{workshop.start_date | date: "%b %-d"}} - {{workshop.end_date | date: "%b %-d, %Y"}}</a>"
          ]
        }
      }
    {% endunless %}
  {% endfor %}
  ]
}
